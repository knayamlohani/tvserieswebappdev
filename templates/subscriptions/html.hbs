<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <meta http-equiv="X-UA-Compatible" content="chrome=1">
    <link rel="stylesheet" type="text/css" href="public/includes/font-awesome/4.2.0/css/font-awesome.min.css">
    <title>TV Shows</title>
    
  </head>

  <body ng-app="search-app">
    <nav id="app-nav-bar">
      <div id="app-info">
        <div id="app-name"><h1>TV Series</h1></div>
        <!--
        <div id="app-for-mac"><a href="http://mac.tvseries.cf"><i class="fa fa-apple fa-2x"></i></a></div>
        <div id="app-for-windows"><a href="http://windows.tvseries.cf"><i class="fa fa-windows fa-2x"></i></a></div>
        -->
      </div>
    </nav>

    <div id="mail-content">
      <div id="mail-title">
        <h1 id="title">{{airDay}}s</h1>
        <h3 id="sub-title">Airing Today</h3>
      </div>
      <div id="body">

        {{#if tvShows}}
          {{#each tvShows}}
            <div class="series">
              <img class="artwork" src="{{artworkUrl}}"/>
              <h3 class="tag">{{name}}</h3>
              <h3 class="episode-name">{{episodeName}}</h3>
            </div>
          {{/each}}
        {{else}}
          <h2 id="no-tvshows">No Episodes for Today</h2>
        {{/if}}
        
      </div>
    </div>



    <script>
      //runScript()
    </script>
  </body>
</html>
