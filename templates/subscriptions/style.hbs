* {
	margin: 0;
	padding: 0;
	border: 0;
}



body {
  background: #f2f2f2;
  color: rgba(0,0,0,.5); }

h1, h2, h3, h4, h5, h6 {
  font-weight: 100; }

nav#app-nav-bar {
  height: 3.5em;
  width: 100%;
  color: white;
  background: rgba(0, 0, 0, 0.7); }
  nav#app-nav-bar > div {
    display: inline-block; }
  nav#app-nav-bar #app-info {
    width: 90%; }
    nav#app-nav-bar #app-info > div {
      display: inline-block; }
    nav#app-nav-bar #app-info a {
      color: white;
      text-decoration: none; }
    nav#app-nav-bar #app-info #app-name {
      padding: 0em 2em 0 3em;
      vertical-align: center; 
      font-size: 1.5em;
      font-weight: 100;}
    nav#app-nav-bar #app-info #app-for-mac {
      padding: 0em 1em; }
      nav#app-nav-bar #app-info #app-for-mac a {
        color: white; }
    nav#app-nav-bar #app-info #app-for-windows {
      padding: 0em 1em; }
      nav#app-nav-bar #app-info #app-for-windows a {
        color: white; }


#mail-content {
	width: 95%;
	margin: 2.5% 2% 2.5% 4%;
}


#mail-content #title {
	width: 97%;
	padding-bottom: .5%;
	text-align: center;
}

#mail-content #body {
	width: 100%;
}
#mail-content #body .series {
	display: inline-block;
	width: 30%;
	margin: 3% 3% 0 0;
}


.series .artwork {
  border-color: transparent;
  background-color: rgba(255,255,255,.25);
	width: 100%;
	display: block;
  border-radius: .2em;
}

.series .tag {
	text-align: center;
	padding-top: 2%; 
}



